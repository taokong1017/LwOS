menu "User Applications"

choice
	bool "Select User Application"
	default CONFIG_SAMPLE_USER_TASK

config CONFIG_SAMPLE_USER_TASK
	bool "Sample User Task"
	help
		This configuration enables a simple user task example that demonstrates
		how to use the task interface.

config CONFIG_SAMPLE_USER_MSGQ
	bool "Sample User Message Queue"
	help
		This configuration enables a simple user message queue example that demonstrates
		how to use the message queue interface.

config CONFIG_SAMPLE_USER_MUTEX
	bool "Sample User MUTEX"
	help
		This configuration enables a simple user mutex example that demonstrates
		how to use the mutex interface.

config CONFIG_SAMPLE_USER_SEM
	bool "Sample User Semphore"
	help
		This configuration enables a simple user semaphore example that demonstrates
		how to use the semaphore interface.

endchoice

endmenu
