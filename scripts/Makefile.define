CFLAGS :=
ifeq ($(CONFIG_COMPILER_OPTIMIZE_NONE), y)
	CFLAGS += -O0
endif

ifeq ($(CONFIG_COMPILER_OPTIMIZE_SPEED), y)
	CFLAGS += -O2
endif

ifeq ($(CONFIG_COMPILER_OPTIMIZE_SIZE), y)
	CFLAGS += -Os
endif

CFLAGS += -g -Wall -Werror -fno-builtin -nostdinc -nostdlib -pipe \
	-I$(srctree)/sample/include \
	-I$(srctree)

ifeq ($(CONFIG_ARM64), y)
	CFLAGS +=-I$(srctree)/arch/arm64/include
endif

AFLAGS += -D__ASSEMBLY__

LDFLAGS += -static --no-warn-rwx-segments
